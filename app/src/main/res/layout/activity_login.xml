<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".Login.Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#F8B66C"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="301dp"
                android:layout_height="55dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="8dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="303dp"
                android:layout_height="53dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:padding="8dp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="301dp"
                android:layout_height="58dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#F8B66C"
                android:text="Login"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="81dp"
                android:layout_height="38dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="#0000ffff"
                app:srcCompat="@drawable/google" />

            <TextView
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:layout_marginTop="-35dp"
                android:baselineAligned="false"
                android:text="You Can Use"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/btn_guest"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="107dp"
                android:layout_height="43dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:text="Guest"
                android:textColor="#F43224"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tab_indicater" />

            <TextView
                android:id="@+id/signupRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Already an user? Sign Up"
                android:textColor="#050301"
                android:textSize="18sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>