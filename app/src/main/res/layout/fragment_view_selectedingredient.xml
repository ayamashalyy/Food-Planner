<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/secondBase"
    app:cardElevation="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_lay_Selected_ingredient"
        android:layout_width="402dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/secondBase"
        android:elevation="20dp">

        <ToggleButton
            android:id="@+id/btn_addToFavorite"
            android:layout_width="39dp"
            android:layout_height="31dp"

            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/favorite"
            android:text="ToggleButton"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/randomImag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/doughnut" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/days_drop_dawn"
            android:layout_width="249dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_edittext"
            android:completionHint="select a day"
            android:completionThreshold="0"
            android:drawableStart="@drawable/food"
            android:editable="false"
            android:fontFamily="casual"
            android:hint="@string/Add_to_plane"
            android:paddingStart="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            tools:ignore="Deprecated" />

        <TextView
            android:id="@+id/randomText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="121dp"
            android:contentDescription="dropdawn List for days "
            android:drawableStart="@drawable/pot"
            android:drawablePadding="12dp"
            android:fontFamily="casual"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintStart_toEndOf="@+id/cardView3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>